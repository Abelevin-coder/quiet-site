const title = "AI and the Internal Capacity of Work";
const subtitle = "How artificial intelligence reshapes role capacity and judgment";
const author = "Abe Levin";
const date = "January 2026";
---

<BaseLayout title={title}>
  <article class="essay">

    <header class="essay-header">
      <h1>{title}</h1>
      <h2 class="subtitle">{subtitle}</h2>
