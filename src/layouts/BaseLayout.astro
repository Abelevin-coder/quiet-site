---
import "../styles/global.css";

const { title = "Index" } = Astro.props;

const path = Astro.url.pathname;
const isActive = (href: string) =>
  href === "/" ? path === "/" : path.startsWith(href);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>

  <body>
    <header>
      <nav aria-label="Primary">
        <a href="/" class={isActive("/") ? "active" : ""}>Home</a>

        <a href="/readings" class={isActive("/readings") ? "active" : ""}>
          Readings
        </a>

        <a href="/advisory" class={isActive("/advisory") ? "active" : ""}>
          Advisory
        </a>

        <a href="/case-studies" class={isActive("/case-studies") ? "active" : ""}>
          Case Studies
        </a>

        <a href="/or-lines" class={isActive("/or-lines") ? "active" : ""}>
          Or Lines
        </a>

        <a href="/gpts" class={isActive("/gpts") ? "active" : ""}>
          GPTs
        </a>
      </nav>
    </header>

    <main>
      <slot />
    </main>
  </body>
</html>
