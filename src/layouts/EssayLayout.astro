---
import BaseLayout from "./BaseLayout.astro";

const { title, subtitle, author, date } = Astro.props;
---

<BaseLayout title={title}>
  <div class="essay-shell">
    <article class="essay-main dropcap">
      <h1>{title}</h1>

      {subtitle && <p><em>{subtitle}</em></p>}
      {author && date && <p><em>{author} Â· {date}</em></p>}

      <slot />
    </article>

    <aside class="essay-aside">
      <div class="meta-block">
        <div class="meta-label">Essay</div>
        {date && <div class="meta-title">{date}</div>}
      </div>
    </aside>
  </div>
</BaseLayout>
